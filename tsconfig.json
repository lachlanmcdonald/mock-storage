{
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "dist",
    "module": "Node16",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
